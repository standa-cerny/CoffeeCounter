<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.standadev.coffeecounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SelectUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectIngredientActivity">
            android:parentActivityName=".SelectUserActivity" >
        </activity>
        <activity android:name=".activities.ChangeUserActivity" />
        <activity android:name=".activities.SelectStatementActivity" />
        <activity android:name=".activities.StatementActivity" />
        <activity android:name=".activities.ChangeIngredientActivity" />
        <activity android:name=".activities.ListClosedStatementsActivity"></activity>
    </application>

</manifest>